<% layout('./layouts/boilerplate') %>
    <h1 >UNC Players</h1>
    <div>
        <a href="/UNCroster/new">Add a Tarheel</a>
    </div>
        <% for(let roster of rosters) {%>
           <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=roster.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= roster.name %></h5>
                        <p class="card-text"> <%=roster.title %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%=roster.hometown %> </small>
                        </p>
                        <a class="btn btn-primary" href="/UNCroster/<%=roster._id%>"> View <%= roster.name%> </a>
                    </div>
                </div>
            </div>
           </div>
            <% }%>
